# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET      /                                                        controllers.Application.index()

GET      /support                                                 controllers.Application.support()

POST     /addLead                                                 controllers.Application.addLead()

POST     /signUpSubmit                                            controllers.Application.signUpSubmit()

POST     /verifyOtp                                               controllers.Application.verifyOtp()

POST     /checkResetOtp                                           controllers.Application.checkResetOtp()

POST     /addPassword                                             controllers.Application.addPassword()

POST     /processCsv                                             controllers.Application.processcsv()

GET      /getAll                                                 controllers.Application.getAll()

POST     /savePassword                                            controllers.Application.savePassword()

GET      /dashboard                                               controllers.Application.dashboard()

POST     /loginSubmit                                             controllers.Application.loginSubmit()

POST     /checkCandidate                                          controllers.Application.checkCandidate()

POST     /processCsv                                              controllers.Application.processcsv()

GET      /getAll                                                  controllers.Application.getAll()

GET      /getAllLocality                                          controllers.Application.getAllLocality()

GET      /getAllJobs                                              controllers.Application.getAllJobs()

GET      /getUserInfo/:id                                         controllers.Application.getUserInfo(id : Long)

GET      /getCandidateInfo/:id                                    controllers.Application.getCandidateInfo(id : Long)

GET      /getCandidateLocality/:id                                controllers.Application.getCandidateLocality(id : Long)

GET      /getCandidateJob/:id                                     controllers.Application.getCandidateJob(id : Long)

GET      /updateLeadType/:leadId/:newStatus                       controllers.Application.updateLeadType(leadId: Long, newStatus: Long)

GET      /updateLeadStatus/:leadId/:leadStatus                    controllers.Application.updateLeadStatus(leadId: Long, leadStatus: Integer)

GET      /street                                                  controllers.Application.supportAuth()

POST     /auth                                                    controllers.Application.auth()

GET      /logout                                                  controllers.Application.logout()

GET      /logoutUser                                              controllers.Application.logoutUser()

#GET      /test                                                    controllers.Application.test()

POST     /api/kw/cdr                                              controllers.Application.kwCdrInput()

# Map static resources from the /public folder to the /assets URL path
GET    /robots.txt                                controllers.Assets.at(path="/public", file="robots.txt")
GET    /assets/*file                             controllers.Assets.at(path="/public", file)
#GET   /webjars/*file                           controllers.WebJarAssets.at(file)
